<h1>Все составляющие проекта строительства</h1>
 
<table class="table table-striped table-hover">
  <tr>
    <th><strong>Название</strong></th>
    <th>Цена за м<sup>2</sup> или %</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @elements.each do |element| %>
    <tr>
      <td><%= element.name %></td>
      <td><%= element.price %> </td>
      <% if can? :read, Element %>
       <td><%= link_to 'Подробно..', element, class: "btn btn-xs btn-info" %></td> 
      <% end %>
      <% if can? :update, Element %>
         <td><%= link_to 'Редактировать цену', edit_element_path(element), class: "btn btn-xs btn-warning" %></td>
      <% end %>
      <% if can? :destroy, Element %>
         <td><%= link_to 'Удалить!', element_path(element), class: "btn btn-xs btn-danger", 
            method: :delete,
            data: { confirm: 'Вы уверены?' } %></td> 
      <% end %>
    
          
     
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'Добавить новый елемент проекта', new_element_path, class: "btn btn-sm btn-success" %>
<%= link_to 'Перейти к форме', elements_form_path, class: "btn btn-xs btn-primary" %>
