<br>Стоимость проекта: <%= @sum %> грн. <br>

<% if @sum.to_f > 0.0 %>
<table class="table table-striped table-hover">
  <tr>
    <th><strong>Название</strong></th>
    <th><strong>Стоимость (грн)</strong></th>
  </tr>
  <% @hh.each do |h| %>
    <tr>
      <td><%= h["name"] %></td>
      <td><%= h["value"] %></td>
    </tr>
  <% end %>
</table>
<% end %>

